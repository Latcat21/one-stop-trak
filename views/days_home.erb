<div class="container pt-5 mt-5">
  <h1 class="text-center display-5">Welcome to your account</h1>
      <% if @avg_cal.nil?%>
      <p></p>
      <% else %>
      <h4 class="text-center">You average:  <%=@avg_cal%> calories a day</h4>
      <% end %>
       <% if @avg_sleep.nil?%>
      <p></p>
      <% else %>
      <h4 class="text-center">Your average sleep is:  <%=@avg_sleep%>  hours a night</h4>
      <% end %>

      <% if @bmr.nil?%>
      <p></p>
      <% else %>
      <h4 class="text-center">Your BMR :  <%=@bmr.calculation%> calories</h4>
      <% end %>
  <h5 class="text-center">
        <a href="/days/new" class="btn btn-primary m-4">Start a new day</a>
        <a href="/posts/new" class="btn btn-secondary">Start a new post </a>
        <a class="text-center btn btn-success m-4" href="days/bmr-info"> calculate BMR </a>
        <a class="text-center btn btn-dark " href="/search">Find recipes </a>


</h5>
 
        <div class="days-container ">
    <% @days.each do | day |%>
      <div class="day-card">
      <div class="day-card-heading">
      <%=day.name %>
      </div>
      <div class="day-card-body">
        <p>Hours slept <%=day.sleep%></p>
        <% if @bmr.nil? %>
        <p>Calories:  <%=day.calorie %> </p>
       
        <%elsif day.calorie > @bmr.calculation%>
        <p class="text-danger">Calories:  <%=day.calorie %></p>
        <%elsif day.calorie < @bmr.calculation %>
        
        <p class="text-success">Calories:  <%=day.calorie %></p>
        <% end %>
      </div>
      <div class="day-card-buttons">
        <a href="/days/<%= day.id%>">View</a>
        <form action="/days/<%=day.id %>" method="POST" >
        <input type="hidden" name="_method" value="DELETE">
        <button>DELETE</button>
          </form>
       </div>

        </div>
         <%end%>
         </div>
          
  



