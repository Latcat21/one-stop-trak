<div class="container pt-5 mt-5">
  <h1 class="text-center display-5">Welcome to your account</h2>
      <h4 class="text-center">Your BMR is.. <%= @bmr %> <br>
        <a href="/days/new" class="btn btn-primary m-4">Start a new day</a>
          <h3 class="text-center">Here are you days</h3>
  </div> 
  <div class="container">
  <div clas="row">
    <% @days.each do | day |%>
    <div class="col-sm-12 col-xs-12 col-md-4 col-lg-4 col-xl-4">
      <div class="card m-4 days-card"> 
      <div class="card-header bg-light">   
      <h5 class="text-center"><%=day.name %></h5>
      </div>
      <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-center">Wake up time: <%=day.time_awake%></li>
      </ul>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-center">Calories: <%=day.calorie%></li>
      </ul>
        <a class="btn btn-success m-2" href="/days/<%= day.id%>">View</a>
        <form action="/days/<%=day.id %>" method="POST" >
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger">DELETE</button>
            </form>
       
        </div>
        </div>
        </div>
         <%end%>
          
         </div>
     </div>



