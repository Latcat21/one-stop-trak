<div class="container my-5 mt-5">
<h2 class="display-5 mt-5 pt-5 pb-3 text-center">Edit your account </h2> 
<div class="registration shadow-lg bg-white rounded p-5">
<form  action="/days/<%=@user.id %>/" method="POST">
<input type="hidden" name="_method" value="PUT" />

<div class="form-group">
<input type="number"
 name="age"
placeholder="age" 
class="form-control"
value="<%=user.age %>"
required/>
</div>
<div class="form-group">
<input type="number"
 name="height"
placeholder="height in inches" 
class="form-control"
value="<%=user.height %>"
required/>
</div>
<div class="form-group">
<input type="number"
 name="weight"
placeholder="weight in lbs" 
class="form-control"
value="<%=user.weight %>"
required/>
</div>

<button class="btn btn-primary">Edit</button>
</form>
</div>
</div>